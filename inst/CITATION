citHeader("To cite package 'rela' in publications use:")     
desc <- packageDescription("rela")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
citEntry(entry="Manual",
	title = "rela: Scale item analysis",
	author = personList(as.person("Michael Chajewski")),
	year = year,
	note = vers,
	textVersion =
	paste("Chajewski, M. (",year,"). rela: Scale item analysis. ",vers, ".", sep=""))